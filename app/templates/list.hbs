<div class="panelContainer">
  <div class="panelList {{if isShow 'right'}}">
    <div class="panelListInner">
      <header class="listHeader">
        <h2 style="margin-top: 0; margin-bottom: 0.33em; font-size: 1.3rem;">Tap item to display in full, swipe left to “dismiss” or right to “adopt”</h2>
        <span style="font-size: smaller">(Not currently working in Chrome on Android)</span>
      </header>
      <div class="listContainer">
        {{touch-list content=content model=model}}
      </div>
    </div>
  </div>
  <div class="panelDetail {{if isShow 'right'}}">{{outlet}}</div>
</div>
